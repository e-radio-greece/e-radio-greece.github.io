---
import type { EnrichedStation } from '../lib/data';
import { titleFromSlug } from '../lib/slugify';

const { station } = Astro.props as { station: EnrichedStation };
const stationUrl = `/station/${station.slug}/`;
const cityUrl = `/city/${station.citySlug}/`;
const genres = station.normalizedGenres.slice(0, 4);
const votes = station.votes ?? 0;
const bitrate = station.bitrate ?? 0;
---

<div class="col">
  <article class="card h-100 shadow-sm position-relative" aria-label={`${station.name} station card`}>
    <div class="card-body">
      <div class="d-flex align-items-center gap-2 mb-2">
        {station.favicon ? (
          <img
            src={station.favicon}
            alt={`${station.name} favicon`}
            width="48"
            height="48"
            loading="lazy"
            class="rounded"
          />
        ) : (
          <div class="bg-secondary-subtle rounded" style="width:48px;height:48px;"></div>
        )}
        <div>
          <h3 class="h6 mb-1">{station.name}</h3>
          <a href={cityUrl} class="text-decoration-none small">
            {station.cityName}
          </a>
        </div>
      </div>
      <div class="mb-2 d-flex flex-wrap gap-1">
        {genres.map((genre) => (
          <span class="badge text-bg-light border" aria-label={`Genre ${titleFromSlug(genre)}`}>
            {titleFromSlug(genre)}
          </span>
        ))}
      </div>
      <div class="d-flex flex-wrap gap-2">
        <span class="badge text-bg-primary">Votes {votes}</span>
        <span class="badge text-bg-secondary">{bitrate || 'N/A'} kbps</span>
        {station.hls === 1 && <span class="badge text-bg-info">HLS</span>}
        {station.ssl_error === 1 && <span class="badge text-bg-warning">SSL Issue</span>}
      </div>
      <a class="stretched-link" href={stationUrl} aria-label={`Open ${station.name}`}></a>
    </div>
  </article>
</div>
